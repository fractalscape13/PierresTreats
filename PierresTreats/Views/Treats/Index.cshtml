@{
  Layout = "_Layout";
}

@using PierresTreats.Models;
@model IEnumerable<PierresTreats.Models.Treat>;

<h1>All Treats</h1>
<hr />
<div class="box">
  @if(@Model.Any())
  {
    @foreach (Treat treat in Model)
    {
      <h3>@Html.ActionLink($"{treat.TreatName}", "Details", new {id = treat.TreatId})</h3>
    }
  }
  else
  {
    <h3> No treats here! </h3>
  }
</div>

<p>@Html.ActionLink("Add a treat", "Create")</p>
<p>@Html.ActionLink("See All Flavors", "Index", "Flavors")</p>