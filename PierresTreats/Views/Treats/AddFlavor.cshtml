@{
  Layout = "_Layout";
}

@model PierresTreats.Models.Treat

<h2>Add a flavor category</h2>
<hr/>

<div class="box">
  <h4>Add a flavor category for @Html.DisplayFor(model => model.TreatName)</h4>

  @using (Html.BeginForm())
  {
    @Html.HiddenFor(model => model.TreatId)

    @Html.Label("Select flavor")
    @Html.DropDownList("FlavorId")<br>

    <input class="btn" type="submit" value="Save changes" />
  }
</div>

<p>@Html.ActionLink("Back to treat list", "Index")</p>