@{
  Layout = "_Layout";
}

@model PierresTreats.Models.Treat

<h3>Add a new treat</h3>
<hr/>

<div class="box">
  @using (Html.BeginForm())
  {
    @Html.LabelFor(model => model.TreatName)
    @Html.TextBoxFor(model => model.TreatName)<br>

    @Html.Label("Select flavor category")
    @Html.DropDownList("FlavorId")<br>

    <input type="submit" value="Add new treat" class="btn btn"/>
  }
</div>

<p>@Html.ActionLink("Back to treat list", "Index")</p>