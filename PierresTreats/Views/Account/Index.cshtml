@{
  Layout = "_Layout";
}

@using System.Security.Claims

<h1>Account Info</h1>
<hr />
<div class="box">
  @if (User.Identity.IsAuthenticated)
  {
    <h3>Hello @User.Identity.Name!</h3>
    <h2>@Html.ActionLink("See All Flavors", "Index", "Flavors")</h2>
    <h2>@Html.ActionLink("See All Treats", "Index", "Treats")</h2>
    @using (Html.BeginForm("LogOff", "Account"))
    {
      <input type="submit" class="btn" value="Log out" />
    }
  }
  else
  {
    <h4> Whoops, looks like you need to log in!</h4>
    <h4> If you don't have an account yet, please register!</h4>
    <p class="btn">@Html.ActionLink("Register", "Register")</p>
    <p class="btn">@Html.ActionLink("Log in", "Login")</p>
  }
</div>